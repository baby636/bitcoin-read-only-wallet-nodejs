{
  "extends": "eslint:recommended",
  "parser": "babel-eslint",
  "rules": {
    "quotes": [
      "warn",
      "double",
      {
        "avoidEscape": true,
        "allowTemplateLiterals": true
      }
    ],
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module",
      "ecmaFeatures": {
        "modules": true,
        "experimentalObjectRestSpread": true
      }
    },
    "max-len": 0,
    "global-require": 0,
    "no-nested-ternary": 0,
    "camelcase": 0,
    "no-underscore-dangle": 0,
    "indent": ["error", "tab", { "SwitchCase": 1 }],
    "no-unused-vars": 0,
    "no-console": "off",
    "lines-between-class-members": "warn",
    "object-curly-spacing": ["warn", "always"]
  },
  "globals": {
    "__DEV__": true,
    "fetch": true,
    "alert": true,
    "console": true,
    "require": true,
    "setTimeout": true,
    "setInterval": true,
    "clearInterval": true,
    "Buffer": true,
    "Promise": true,
    "module": true,
    "process": true
  }
}
